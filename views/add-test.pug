                article.input-row
                    //- h3 Test Info
                    section
                        label(for='name') Name 
                        input#name.underline-input(required='' type='text' name='name')
                    section
                        label(for='description') Description 
                        input#description.underline-input(required='' type='text' name='description')
                    section
                        button#save.font-clear Save
        
            .display-body
                .int-border
                    //- p Request Body Output
                    pre#body-build
