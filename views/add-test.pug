
extends layout
block content
    script(async='' src='./javascripts/form.js')
    main
        .container
        
            .col-8.light-border
                article#action.input-row
                    //- h3 Action
                    section
                        label(for='selected-method') Method
                        select#selected-method(name='selected-method')
                            option(value='GET') GET
                            option(value='POST') POST
                            option(value='PUT') PUT
                            option(value='DELETE') DELETE
                    section
                        label(for='url') URL
                        input#url(required='' pattern='.*[\.].*' type='url' name='url')
                    section
                        button#send-test.font-clear Send
                article.input-row
                    //- h3 Request
                    section
                        label(for='selected-request') Method
                        select#selected-request(name='selected-request')
                            option(value='header') Header
                            option(value='body') Body
                            option(value='params') Params
                    section
                        label(for='key') Key
                        input#key(required='' type='text' name='key')
                    section
                        label(for='value') Value
                        input#value(required='' type='text' name='value')
                    section
                        button#add-values.font-clear Add

                //- article.input-row
